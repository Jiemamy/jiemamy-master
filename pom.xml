  <distributionManagement>
    <site>
      <id>jiemamy-report</id>
      <name>maven-jiemamy-plugin-site</name>
      <url>scp://report.jiemamy.org/var/www/report.jiemamy.org/${project.artifactId}/${project.version}</url>
